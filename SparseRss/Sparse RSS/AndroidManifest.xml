<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.bernd.shandschuh.sparserss"
    android:installLocation="auto"
    android:versionCode="96"
    android:versionName="1.96" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Android 1.5 requires this -->
    <uses-permission android:name="de.bernd.shandschuh.sparserss.READFEEDS" />
    <uses-permission android:name="de.bernd.shandschuh.sparserss.WRITEFEEDS" />

    <permission
        android:name="de.bernd.shandschuh.sparserss.READFEEDS"
        android:description="@string/permission_readfeeds_description"
        android:label="@string/permission_readfeeds"
        android:protectionLevel="normal" />
    <permission
        android:name="de.bernd.shandschuh.sparserss.WRITEFEEDS"
        android:description="@string/permission_writefeeds_description"
        android:label="@string/permission_writefeeds"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:testOnly="false" >
        <service android:name="de.bernd.shandschuh.sparserss.service.RefreshService" />
        <service android:name="de.bernd.shandschuh.sparserss.service.FetcherService" />

        <provider
            android:name="de.bernd.shandschuh.sparserss.provider.FeedDataContentProvider"
            android:authorities="de.bernd.shandschuh.sparserss.provider.FeedData"
            android:readPermission="de.bernd.shandschuh.sparserss.READFEEDS"
            android:writePermission="de.bernd.shandschuh.sparserss.WRITEFEEDS" />

        <activity
            android:name="de.bernd.shandschuh.sparserss.MainTabActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.bernd.shandschuh.sparserss.RSSOverview"
            android:launchMode="singleTask" />
        <activity android:name="de.bernd.shandschuh.sparserss.EmptyActivity" />
        <activity
            android:name="de.bernd.shandschuh.sparserss.EntriesListActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.dir/vnd.feeddata.entry" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.bernd.shandschuh.sparserss.EntryActivity"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.feeddata.entry" />
            </intent-filter>
        </activity>
        <activity android:name="de.bernd.shandschuh.sparserss.ApplicationPreferencesActivity" />
        <activity android:name="de.bernd.shandschuh.sparserss.widget.WidgetConfigActivity" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.bernd.shandschuh.sparserss.FeedConfigActivity"
            android:theme="@style/Theme.Dialog" >
            <intent-filter>
                <action android:name="android.intent.action.EDIT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.item/vnd.feeddata.feed" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.INSERT" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="vnd.android.cursor.dir/vnd.feeddata.feed" />
            </intent-filter>
        </activity>

        <receiver android:name="de.bernd.shandschuh.sparserss.widget.SparseRSSAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="de.bernd.shandschuh.sparserss.FEEDUPDATED" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetinfo" />
        </receiver>
        <receiver android:name="de.bernd.shandschuh.sparserss.RefreshBroadcastReceiver" >
            <intent-filter>
                <action android:name="de.bernd.shandschuh.sparserss.REFRESH" />
            </intent-filter>
        </receiver>
        <receiver android:name="de.bernd.shandschuh.sparserss.BootCompletedBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="de.bernd.shandschuh.sparserss.SendLogActivity"
            android:label="@string/title_activity_send_log" >
        </activity>
    </application>

</manifest>