<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_url" />

        <EditText
            android:id="@+id/feed_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/websiteorfeed"
            android:inputType="textUri"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_title" />

        <EditText
            android:id="@+id/feed_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/optional"
            android:singleLine="true" />

        <CheckBox
	        android:layout_margin="5dp"
            android:id="@+id/wifionlycheckbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/refreshonwifionly" />

        
        <Spinner
	        android:layout_margin="10dp"
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true" />
<!-- 
        <CheckBox
	        android:layout_margin="5dp"
            android:id="@+id/cardviewcheckbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Card View" />
 -->            
        <CheckBox
	        android:layout_margin="5dp"
            android:id="@+id/topfeedcheckbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/topfeeds" />
        
        <CheckBox
	        android:layout_margin="5dp"
            android:id="@+id/synccheckbox"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/offline" />
        
        </LinearLayout>

</ScrollView>